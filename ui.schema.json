{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "UI.json",
    "type": "object",
    "properties": {
        "description": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "todo": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "ui": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]*$"
        },
        "version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]*$"
        },
        "title": {
            "type": "string"
        },
        "pages": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/Page"
            },
            "minItems": 1
        }
    },
    "required": [
        "ui",
        "pages"
    ],
    "$defs": {
        "Page": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "todo": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "id": {
                    "$ref": "#/$defs/IdString"
                },
                "type": {
                    "$ref": "#/$defs/PageType"
                },
                "title": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "pathParameters": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Parameter"
                    }
                },
                "queryParameters": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/Parameter"
                    }
                },
                "events": {
                    "$ref": "#/$defs/PageEvent"
                },
                "bindings": {
                    "$ref": "#/$defs/RecordString"
                },
                "elements": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/$defs/ButtonElement"
                            },
                            {
                                "$ref": "#/$defs/TextElement"
                            },
                            {
                                "$ref": "#/$defs/TextInputElement"
                            },
                            {
                                "$ref": "#/$defs/TextAreaElement"
                            },
                            {
                                "$ref": "#/$defs/PasswordInputElement"
                            },
                            {
                                "$ref": "#/$defs/CheckboxElement"
                            },
                            {
                                "$ref": "#/$defs/RadioElement"
                            },
                            {
                                "$ref": "#/$defs/SelectElement"
                            },
                            {
                                "$ref": "#/$defs/FileUploadElement"
                            },
                            {
                                "$ref": "#/$defs/FileDownloadElement"
                            },
                            {
                                "$ref": "#/$defs/DateInputElement"
                            },
                            {
                                "$ref": "#/$defs/TimeInputElement"
                            },
                            {
                                "$ref": "#/$defs/ImageElement"
                            },
                            {
                                "$ref": "#/$defs/IconElement"
                            },
                            {
                                "$ref": "#/$defs/LinkElement"
                            },
                            {
                                "$ref": "#/$defs/PaginationElement"
                            },
                            {
                                "$ref": "#/$defs/TableElement"
                            }
                        ]
                    },
                    "minItems": 1
                }
            },
            "required": [
                "id",
                "type",
                "title",
                "path",
                "elements"
            ]
        },
        "IdString": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_-]*$"
        },
        "PageType": {
            "type": "string",
            "enum": [
                "screen",
                "popup"
            ]
        },
        "Parameter": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "required": {
                    "type": "boolean"
                },
                "default": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        },
        "PageEvent": {
            "type": "object",
            "properties": {
                "load": {
                    "$ref": "#/$defs/EventHandler"
                },
                "unload": {
                    "$ref": "#/$defs/EventHandler"
                }
            }
        },
        "RecordString": {
            "type": "object",
            "properties": {},
            "unevaluatedProperties": {
                "type": "string"
            }
        },
        "ButtonElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "button"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/InputElement"
                }
            ]
        },
        "TextElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "text"
                },
                "size": {
                    "$ref": "#/$defs/TextSize"
                },
                "color": {
                    "$ref": "#/$defs/Color"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/Element"
                }
            ]
        },
        "TextInputElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "textfield"
                },
                "placeholder": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/InputElement"
                }
            ]
        },
        "TextAreaElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "textarea"
                },
                "rows": {
                    "type": "integer"
                },
                "placeholder": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/InputElement"
                }
            ]
        },
        "PasswordInputElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "password"
                },
                "placeholder": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/InputElement"
                }
            ]
        },
        "CheckboxElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "checkbox"
                },
                "checked": {
                    "type": "boolean"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/InputElement"
                }
            ]
        },
        "RadioElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "radio"
                },
                "checked": {
                    "type": "boolean"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/InputElement"
                }
            ]
        },
        "SelectElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "select"
                },
                "options": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/SelectOption"
                    }
                }
            },
            "required": [
                "type",
                "options"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/InputElement"
                }
            ]
        },
        "FileUploadElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "fileUpload"
                },
                "accept": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/InputElement"
                }
            ]
        },
        "FileDownloadElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "fileDownload"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/Element"
                }
            ]
        },
        "DateInputElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "date"
                },
                "format": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/InputElement"
                }
            ]
        },
        "TimeInputElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "time"
                },
                "format": {
                    "type": "string"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/InputElement"
                }
            ]
        },
        "ImageElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "image"
                },
                "src": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "src"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/Element"
                }
            ]
        },
        "IconElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "icon"
                },
                "src": {
                    "type": "string"
                },
                "size": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "src"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/Element"
                }
            ]
        },
        "LinkElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "link"
                },
                "href": {
                    "type": "string"
                },
                "target": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "href"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/Element"
                }
            ]
        },
        "PaginationElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "pagination"
                }
            },
            "required": [
                "type"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/Element"
                }
            ]
        },
        "TableElement": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "table"
                },
                "columns": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/TableColumn"
                    }
                },
                "selectable": {
                    "type": "boolean"
                },
                "sortable": {
                    "type": "boolean"
                }
            },
            "required": [
                "type",
                "columns"
            ],
            "allOf": [
                {
                    "$ref": "#/$defs/Element"
                }
            ]
        },
        "EventHandler": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "todo": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "action": {
                    "type": "string"
                },
                "success": {
                    "type": "string"
                },
                "error": {
                    "type": "string"
                },
                "api": {
                    "$ref": "#/$defs/API"
                }
            },
            "required": [
                "action",
                "success"
            ]
        },
        "InputElement": {
            "type": "object",
            "properties": {
                "validations": {
                    "$ref": "#/$defs/Validation"
                },
                "value": {
                    "type": "string"
                },
                "readonly": {
                    "type": "boolean"
                }
            },
            "allOf": [
                {
                    "$ref": "#/$defs/Element"
                }
            ]
        },
        "TextSize": {
            "type": "string",
            "enum": [
                "small",
                "medium",
                "large",
                "xlarge"
            ]
        },
        "Color": {
            "type": "string",
            "enum": [
                "black",
                "red",
                "green",
                "gray"
            ]
        },
        "Element": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "todo": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "id": {
                    "$ref": "#/$defs/IdString"
                },
                "type": {
                    "$ref": "#/$defs/ElementType"
                },
                "title": {
                    "type": "string"
                },
                "display": {
                    "$ref": "#/$defs/ElementDisplay"
                },
                "disable": {
                    "type": "string"
                },
                "visible": {
                    "type": "string"
                },
                "events": {
                    "$ref": "#/$defs/ElementEvent"
                }
            },
            "required": [
                "id",
                "type",
                "title"
            ]
        },
        "SelectOption": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                }
            },
            "required": [
                "label",
                "value"
            ]
        },
        "TableColumn": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "todo": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "sortable": {
                    "type": "boolean"
                },
                "filterable": {
                    "type": "boolean"
                },
                "format": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "title"
            ]
        },
        "API": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "todo": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "path": {
                    "type": "string"
                },
                "method": {
                    "$ref": "#/$defs/HttpMethod"
                },
                "request": {
                    "$ref": "#/$defs/RecordString"
                },
                "response": {
                    "$ref": "#/$defs/RecordString"
                }
            },
            "required": [
                "path",
                "method",
                "request"
            ]
        },
        "Validation": {
            "type": "object",
            "properties": {
                "required": {
                    "type": "boolean"
                },
                "minLength": {
                    "type": "integer"
                },
                "maxLength": {
                    "type": "integer"
                },
                "pattern": {
                    "type": "string"
                },
                "number": {
                    "type": "boolean"
                },
                "min": {
                    "type": "integer"
                },
                "max": {
                    "type": "integer"
                },
                "email": {
                    "type": "boolean"
                },
                "url": {
                    "type": "boolean"
                },
                "phone": {
                    "type": "boolean"
                }
            }
        },
        "ElementType": {
            "type": "string",
            "enum": [
                "button",
                "text",
                "textfield",
                "textarea",
                "password",
                "radio",
                "checkbox",
                "select",
                "fileUpload",
                "fileDownload",
                "date",
                "time",
                "table",
                "pagination",
                "image",
                "icon",
                "link"
            ]
        },
        "ElementDisplay": {
            "type": "string",
            "enum": [
                "inline",
                "block"
            ]
        },
        "ElementEvent": {
            "type": "object",
            "properties": {
                "click": {
                    "$ref": "#/$defs/EventHandler"
                },
                "change": {
                    "$ref": "#/$defs/EventHandler"
                },
                "focus": {
                    "$ref": "#/$defs/EventHandler"
                },
                "blur": {
                    "$ref": "#/$defs/EventHandler"
                }
            }
        },
        "HttpMethod": {
            "type": "string",
            "enum": [
                "get",
                "put",
                "post",
                "patch",
                "delete"
            ]
        }
    }
}